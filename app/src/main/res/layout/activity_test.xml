<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.myapplication.RefreshableView
            android:id="@+id/refreshable_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ListView
                android:id="@+id/list_view"
                android:layout_width="200dp"
                android:layout_height="0dp"></ListView>

            <ImageView
                android:id="@+id/test_alpha"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/loading_animation_1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/test_scale"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="@drawable/loading_animation_1" />

                <ImageView
                    android:id="@+id/test_scale2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="@drawable/loading_animation_1" />
            </LinearLayout>


            <ImageView
                android:id="@+id/test_rotate"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/loading_animation_1" />

            <ImageView
                android:id="@+id/test_translate"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/loading_animation_1" />

            <ImageView
                android:id="@+id/test_set"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/loading_animation_1" />

            <ImageView
                android:id="@+id/test_attribute"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/loading_animation_1" />

            <ImageView
                android:id="@+id/test_attribute2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/loading_animation_1" />


        </com.example.myapplication.RefreshableView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.myapplication.Test_Attribute_Animation.MyView
                android:layout_width="match_parent"
                android:layout_height="300dp" />
            <com.example.myapplication.Test_Attribute_Animation.MyView2
                android:id="@+id/myview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



    </FrameLayout>


</RelativeLayout>